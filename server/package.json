{
  "name": "ativeplay-bridge",
  "version": "2.0.0",
  "description": "QR Code bridge server for AtivePlay TV app with Worker Pool",
  "main": "api-server.js",
  "type": "module",
  "scripts": {
    "start": "pm2-runtime start ecosystem.config.cjs",
    "start:api": "node --max-old-space-size=300 api-server.js",
    "start:worker": "node --max-old-space-size=800 --expose-gc worker.js",
    "dev": "pm2 start ecosystem.config.cjs",
    "dev:api": "node --max-old-space-size=300 --watch api-server.js",
    "dev:worker": "node --max-old-space-size=800 --expose-gc --watch worker.js",
    "stop": "pm2 stop ecosystem.config.cjs",
    "logs": "pm2 logs",
    "monit": "pm2 monit"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "qrcode": "^1.5.3",
    "bullmq": "^5.1.0",
    "ioredis": "^5.3.2",
    "express-rate-limit": "^7.1.5",
    "prom-client": "^15.1.0",
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
